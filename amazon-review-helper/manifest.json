{
  "name": "Amazonia: Amazon Review Helper",
  "manifest_version": 3,
  "version": "1.0",
  "description": "Creates short analysis of the product's pros and cons based on user reviews",
  "permissions": ["cookies",
  "tabs",
  "activeTab",
  "webNavigation",
  "notifications",
  "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "amazon.png"
  },
  "icons": {
    "16": "amazon.png",
    "32": "amazon.png",
    "48": "amazon.png",
    "128": "amazon.png"
  }
}
